{
  "name": "empora",
  "version": "1.0.0",
  "private": true,
  "description": "Empora - Modern e-commerce platform with Next.js and Nest.js using TDD",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:gateway": "pnpm --filter gateway dev",
    "dev:auth": "pnpm --filter auth-service dev",
    "dev:product": "pnpm --filter product-service dev",
    "dev:cart": "pnpm --filter cart-service dev",
    "dev:order": "pnpm --filter order-service dev",
    "dev:notification": "pnpm --filter notification-service dev",
    "build": "pnpm run --recursive build",
    "build:frontend": "pnpm --filter frontend build",
    "build:gateway": "pnpm --filter gateway build",
    "build:auth": "pnpm --filter auth-service build",
    "build:product": "pnpm --filter product-service build",
    "build:packages": "pnpm --filter @empora/common build && pnpm --filter @empora/config build && pnpm --filter @empora/database build",
    "test": "pnpm run --recursive test",
    "test:frontend": "pnpm --filter frontend test",
    "test:gateway": "pnpm --filter gateway test",
    "test:auth": "pnpm --filter auth-service test",
    "test:product": "pnpm --filter product-service test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "lint": "pnpm run --recursive lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate:auth": "pnpm --filter auth-service prisma:migrate",
    "db:migrate:product": "pnpm --filter product-service prisma:migrate",
    "db:generate:auth": "pnpm --filter auth-service prisma:generate",
    "db:generate:product": "pnpm --filter product-service prisma:generate",
    "db:studio:auth": "pnpm --filter auth-service prisma:studio",
    "db:studio:product": "pnpm --filter product-service prisma:studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "playwright": "^1.56.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
